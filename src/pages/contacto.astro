---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto - Fundación Peluditos</title>
    <style>
      body, html {
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
        box-sizing: border-box;
      }

      main {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
      }

      h1 {
        text-align: center;
        color: #0b0c0b;
        margin-bottom: 30px;
      }

      .contact-info, .contact-form {
        margin: 20px 0;
      }

      .contact-info {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
      }

      .contact-info div {
        flex: 1;
        margin: 10px;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .contact-info h3 {
        margin-bottom: 10px;
      }

      .contact-info p {
        color: #555;
      }

      /* Estilos del formulario */
      form {
        display: flex;
        flex-direction: column;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }

      label {
        margin-bottom: 10px;
        font-weight: bold;
        color: #333;
      }

      input, textarea {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
      }

      textarea {
        resize: vertical;
        min-height: 150px;
      }

      button {
        background-color: #2b8db4;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #45a049;
      }

      /* Estilo del mensaje de éxito */
      .success-message {
        display: none; /* Ocultar por defecto */
        margin: 20px 0;
        padding: 15px;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        text-align: center;
      }

      /* Estilo del mapa */
      .map-container {
        margin: 20px auto;
        width: 100%;
        max-width: 600px;
        height: 300px;
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
      }
    </style>
    <script>
      function handleSubmit(event) {
        console.log("Formulario enviado"); // Verifica si se imprime en la consola
        event.preventDefault(); // Evita que se recargue la página

        // Mostrar mensaje de éxito
        document.getElementById('successMessage').style.display = 'block';

        // Opcional: Limpiar el formulario después de enviar
        event.target.reset();
      }
    </script>
  </head>

  <body>
    <!-- Header -->
    <Header />

    <main>
      <h1>Contáctanos</h1>

      <!-- Información de contacto -->
      <div class="contact-info">
        <div>
          <h3>Teléfono</h3>
          <p>+57 310 123 4567</p>
        </div>
        <div>
          <h3>Email</h3>
          <p>contacto@fundacionpeluditos.com</p>
        </div>
        <div>
          <h3>Dirección</h3>
          <p>Carrera 45 #25-30, Bogotá, Colombia</p>
        </div>
      </div>

      <!-- Mensaje de éxito -->
      <div id="successMessage" class="success-message">
        ¡Formulario enviado con éxito!
      </div>

      <!-- Formulario de contacto -->
      <div class="contact-form">
        <form onsubmit="handleSubmit(event)">
          <label for="name">Nombre:</label>
          <input type="text" id="name" name="name" placeholder="Tu nombre" required>

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" placeholder="Tu email" required>

          <label for="message">Mensaje:</label>
          <textarea id="message" name="message" placeholder="Escribe tu mensaje" required></textarea>

          <button type="submit">Enviar</button>
        </form>
      </div>

      <!-- Mapa -->
      <div class="map-container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.987029558132!2d-74.08175208579793!3d4.609710343909699!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f99fb59e19f2b%3A0x91539e5e1e74f4c1!2sBogot%C3%A1%2C%20Colombia!5e0!3m2!1ses!2sco!4v1697497317001!5m2!1ses!2sco"
          width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
        ></iframe>
      </div>
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>
